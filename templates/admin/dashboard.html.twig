{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block content %}
    <div class="dashboard-container" data-mercure-url="{{ mercure_url }}" data-mercure-jwt="{{ mercure_jwt }}">
        <div class="dashboard-header">
            <div>
                <h1 class="dashboard-title">Analytics Dashboard</h1>
                <p class="dashboard-subtitle">Â¡Bienvenido de vuelta! AquÃ­ estÃ¡ el resumen de tu negocio. ðŸ‘‹</p>
            </div>
            <div class="date-selector">
                <span class="current-date">Hoy, {{ 'now'|date('F d', 'America/Lima') }}</span>
            </div>
        </div>

        <div class="metrics-grid">
            <div class="metric-card visitors-card">
                <div class="metric-header">
                    <h3>Visitantes</h3>
                </div>
                <div class="metric-value">{{ (new_orders * 127)|number_format(0, '.', ',') }}</div>
                <div class="metric-change positive">
                    <i class="fas fa-arrow-up"></i>
                    <span>+14%</span>
                    <span class="change-period">Desde la semana pasada</span>
                </div>
            </div>

            <div class="metric-card activity-card">
                <div class="metric-header">
                    <h3>Actividad</h3>
                    <span class="badge">Anual</span>
                </div>
                <div class="metric-value">{{ (total_orders * 42)|number_format(0, '.', ',') }}</div>
                <div class="metric-change negative">
                    <i class="fas fa-arrow-down"></i>
                    <span>-12%</span>
                    <span class="change-period">Desde la semana pasada</span>
                </div>
            </div>

            <div class="metric-card chart-card">
                <div class="metric-header">
                    <h3>Mobile / Desktop</h3>
                </div>
                <div class="chart-container">
                    <canvas id="deviceChart" width="300" height="150"></canvas>
                </div>
            </div>
        </div>

        <div class="secondary-metrics-grid">
            <div class="metric-card realtime-card">
                <div class="metric-header">
                    <h3>Real-Time</h3>
                    <span class="badge secondary">Mensual</span>
                </div>
                <div class="metric-value">{{ new_orders * 44 }}</div>
                <div class="metric-change negative">
                    <i class="fas fa-arrow-down"></i>
                    <span>-18%</span>
                    <span class="change-period">Desde la semana pasada</span>
                </div>
            </div>

            <div class="metric-card bounce-card">
                <div class="metric-header">
                    <h3>Bounce</h3>
                    <span class="badge secondary">Anual</span>
                </div>
                <div class="metric-value">{{ (on_hold_orders * 412)|number_format(0, '.', ',') }}</div>
                <div class="metric-change positive">
                    <i class="fas fa-arrow-up"></i>
                    <span>+27%</span>
                    <span class="change-period">Desde la semana pasada</span>
                </div>
            </div>
        </div>

        <div class="lower-section">
            <div class="metric-card realtime-chart-card">
                <div class="metric-header">
                    <h3>Real-Time Analytics</h3>
                    <div class="chart-actions">
                        <button class="action-btn" onclick="simulateNewEvent()" title="Simular Evento">
                            <i class="fas fa-plus"></i>
                        </button>
                        <button class="action-btn" onclick="loadRealtimeData()" title="Actualizar">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                        <button class="action-btn">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                    </div>
                </div>
                <div class="realtime-chart-container">
                    <canvas id="realtimeChart" width="400" height="250"></canvas>
                </div>
            </div>
            <div class="metric-card source-card">
                <div class="metric-header">
                    <h3>Source / Medium</h3>
                </div>
                <div class="source-chart-container">
                    <canvas id="sourceChart" width="300" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
